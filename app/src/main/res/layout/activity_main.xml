<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#B1F8E3"
            android:weightSum="3">


            <ImageView
                android:id="@+id/amazon"
                android:layout_width="106dp"
                android:layout_height="25dp"
                android:layout_marginTop="19dp"
                android:layout_marginStart="3sp"
                android:background="@drawable/amazon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=".in"
                android:textColor="@color/black"
                android:textSize="23dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/notification"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="6dp"

                android:background="@drawable/ic_baseline_notifications_none_24" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/search"
                android:layout_marginTop="6dp"
                android:background="@drawable/ic_baseline_search_24" />

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/linear_color"

                android:orientation="horizontal"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello,"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="normal"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Sai  "
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:layout_weight="0"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_marginLeft="160dp"
                        android:layout_weight="0.6"
                        android:id="@+id/contact"

                        android:src="@drawable/profile"/>


                </LinearLayout>






            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.appcompat.widget.AppCompatButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="Your Orders"
                        android:background="@drawable/cornors"
                        android:textAllCaps="false"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/Yourorder"

                        android:textColor="@color/black"
                        android:layout_marginRight="20dp"
                        />

                    <androidx.appcompat.widget.AppCompatButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:layout_marginRight="20dp"
                        android:text="Buy Again"
                        android:id="@+id/Buyagain"
                        android:textColor="@color/black"
                        android:background="@drawable/cornors"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    android:weightSum="2">

                    <androidx.appcompat.widget.AppCompatButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="Your Account"
                        android:textAllCaps="false"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:id="@+id/Youraccount"
                        android:background="@drawable/cornors"/>

                    <androidx.appcompat.widget.AppCompatButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/cornors"
                        android:text="Your Wish List"
                        android:textAllCaps="false"
                       android:id="@+id/Yourwish"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Yours Orders"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                   android:id="@+id/yourorders"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"

                    android:text="Hi! You have no recent orders."
                    android:textSize="14dp" />

                <Button

                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:text="Return to the HomePage"
                    android:id="@+id/Returnhomepage"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#C9AEABAB"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Keep shopping for"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:id="@+id/keepshopping"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:text="Edit"
                    android:id="@+id/edit"
                    android:textColor="#2CEFDC"

                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/img_5"
                            android:background="@drawable/underline"
                            android:padding="4dp"
                            android:id="@+id/smartphones"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="smartPhones"
                            android:textColor="@color/black"
                            android:textSize="18sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_margin="5dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/img"
                            android:id="@+id/bookcases"
                            android:background="@drawable/underline"
                            android:layout_marginRight="20dp"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bookcases"
                            android:textColor="@color/black"
                            android:textSize="18sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="120dp"
                            android:src="@drawable/img_3"
                            android:id="@+id/jewelerrers"
                            android:background="@drawable/underline"
                            android:padding="2dp"


                             />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Women jewel..."
                            android:textColor="@color/black"
                            android:textSize="18sp" />


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_margin="5dp">
                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:src="@drawable/img_1"
                                android:id="@+id/makeup"
                                android:background="@drawable/underline"
                                android:padding="4dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Make-up kits"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_margin="5dp">
                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:src="@drawable/img_2"
                                android:id="@+id/sofas"
                                android:background="@drawable/underline"
                                android:padding="4dp"
                               />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sofas couches"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_margin="5dp">
                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:src="@drawable/img_4"
                                android:padding="4dp"
                                android:id="@+id/swings"
                                android:background="@drawable/underline"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Swing chairs"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View your browsing history"
                android:textColor="#8CF8C6"
                android:textStyle="bold"
                android:id="@+id/history"
                android:textSize="20dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#C9AEABAB"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Wish List"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:id="@+id/yourwishlist"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"

                android:text="You haven't created any lists."
                android:textColor="@color/black"
                android:textSize="14dp" />

            <Button
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:textAllCaps="false"
                android:id="@+id/Createlist"
                android:textColor="@color/black"
                android:text="Create a List" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#C9AEABAB"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Your Account"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:id="@+id/youraccounts"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:text="See all"
                        android:id="@+id/seeall"
                        android:textColor="#547370"

                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">




                            <Button
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="180dp"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:textColor="@color/black"
                                android:textAllCaps="false"
                                android:id="@+id/YourOrders"

                                android:text="Your Orders" />

                            <Button
                                android:id="@+id/Youraddresses"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="180dp"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:text="Your Addresses"
                                android:textAllCaps="false"
                                android:textColor="@color/black" />

                            <Button
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:textAllCaps="false"
                               android:id="@+id/Topup"
                                android:textColor="@color/black"
                                android:text="@string/button2" />

                            <Button
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:textAllCaps="false"
                                android:layout_margin="10dp"
                                android:id="@+id/Manage"
                                android:textColor="@color/black"
                                android:text="Manage Your Profiles" />

                            <Button
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="180dp"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:textAllCaps="false"
                               android:id="@+id/AmazonPay"
                                android:textColor="@color/black"
                                android:text="Amazon Pay UPI" />

                            <Button
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:textAllCaps="false"
                                android:id="@+id/Viewamazon"
                                android:textColor="@color/black"
                                android:text="@string/button1" />


                        </LinearLayout>
                    </HorizontalScrollView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#C9AEABAB" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Buy Again"
                       android:id="@+id/buyagain"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"

                        android:text="@string/button3"
                        android:textColor="@color/black"
                        android:textSize="14dp" />


                    <Button
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="10dp"
                       android:id="@+id/visit"
                        android:text="Visit Buy Again"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#C9AEABAB"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Following"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:id="@+id/following"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="130dp"
                            android:text="Who you follow"
                            android:id="@+id/who"
                            android:textColor="#547370"

                            android:textSize="16sp" />
                    </LinearLayout>






                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginTop="10dp"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/button4"
                                android:textSize="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/seeeditfraeme"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="See older posts"
                                android:textColor="#AEF6AE"
                                android:textSize="20dp"
                                android:layout_weight="1"/>


                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="#C9AEABAB"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical">

                    </LinearLayout>










                    </LinearLayout>




                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
